[Unit]
Description=LSR Trading Dashboard
After=network.target

[Service]
Type=simple
User=rsteen
WorkingDirectory=/home/rsteen/edge-dashboard
ExecStart=/home/rsteen/edge-dashboard/venv/bin/python /home/rsteen/edge-dashboard/server.py
Restart=on-failure
RestartSec=5
Environment=PYTHONUNBUFFERED=1

[Install]
WantedBy=multi-user.target
